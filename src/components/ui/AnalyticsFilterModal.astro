<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    const filters = {
      periodType: "custom",
      periods: [],
      components: [],
      visualization: "line",
    };

    /* PERIOD TYPE TOGGLE */
    $('input[name="periodType"]').on("change", function () {
      filters.periodType = this.value;
      $("#customRangeSection").toggleClass("d-none", this.value !== "custom");
      $("#periodizedSection").toggleClass(
        "d-none",
        this.value !== "periodized",
      );
    });

    /* PERIOD TABS */
    $(".period-tab").on("click", function () {
      $(".period-tab").removeClass("active");
      $(this).addClass("active");
      filters.periods = [];
      $("#periodTags").empty();
    });

    /* ADD PERIOD */
    $("#periodSelect").on("change", function () {
      const val = this.value;
      if (val && !filters.periods.includes(val)) {
        filters.periods.push(val);
        $("#periodTags").append(`
        <div class="d-flex justify-content-between">
          <span>${val}</span>
          <span class="text-danger remove-period" data-value="${val}">&times;</span>
        </div>
      `);
      }
    });

    $(document).on("click", ".remove-period", function () {
      const val = $(this).data("value");
      filters.periods = filters.periods.filter((v) => v !== val);
      $(this).parent().remove();
    });

    /* COMPONENT SELECTION */
    $("#depositSelect, #withdrawalSelect").on("change", function () {
      const val = this.value;
      if (val && !filters.components.includes(val)) {
        filters.components.push(val);
        $("#componentTags").append(`
        <div class="d-flex justify-content-between">
          <span>${val}</span>
          <span class="text-danger remove-component" data-value="${val}">&times;</span>
        </div>
      `);
      }
    });

    $(document).on("click", ".remove-component", function () {
      const val = $(this).data("value");
      filters.components = filters.components.filter((v) => v !== val);
      $(this).parent().remove();
    });

    /* VISUALIZATION TYPE */
    $(".viz-option").on("click", function () {
      $(".viz-option").removeClass("active");
      $(this).addClass("active");
      filters.visualization = $(this).data("type");
    });

    /* APPLY FILTER */
    $("#applyFilter").on("click", function () {
      console.log("Applied Filters:", filters);
      $("#analyticsFilterModal").modal("hide");
    });

    /* RESET FILTER */
    $("#resetFilter").on("click", function () {
      location.reload();
    });
  });
</script>
