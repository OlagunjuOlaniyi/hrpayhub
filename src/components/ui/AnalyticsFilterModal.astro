            border-radius: 12px;
            padding: 14px;
            display: flex;
            align-items: center;
            gap: 10px;
            cursor: pointer;
            background: #fff;
            transition: all 0.2s ease;
          }

          .viz-card:hover {
            border-color: #2271b6;
          }

          .viz-card.active {
            border-color: #2271b6;
            background-color: #eaf3ff;
          }

