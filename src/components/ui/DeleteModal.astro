---
// components/ui/ModalAddNew.astro
const { modalId = "deleteModal", title = "Designation" } = Astro.props;
import { CloseCircleIcon } from "../Icons";
---

<div class="modal fade" id={modalId} tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content p-5">
      <!-- Modal Header -->
      <div class="modal-header border-0 d-flex justify-content-end">
        <img
          role="button"
          data-bs-dismiss="modal"
          src="images/png/icons/close-circle-1.svg"
          alt="close"
        />
      </div>

      {
        title==="Financial"?(<>
        <!-- Modal body -->
      <div class="modal-body text-center py-2 border-0">
        <img src="images/png/icons/warning.svg" alt="warning" />
        <p class="fs-22 fw-bold mt-3">Delete</p>
        <p>Are you sure you want to delete this?</p>
      </div>

      <!-- Modal footer -->
      <div class="modal-footer d-flex justify-content-center border-0">
        <button
          type="button"
          class="btn text-white"
          style="background-color: red;"
          data-bs-dismiss="modal"
        >
          Yes, delete 
        </button>
      </div></>):(<>
      <!-- Modal body -->
      <div class="modal-body text-center py-2 border-0">
        <img src="images/png/icons/warning.svg" alt="warning" />
        <p class="fs-22 fw-bold mt-3">Delete {title}</p>
        <p>Are you sure you want to delete this {title}?</p>
      </div>

      <!-- Modal footer -->
      <div class="modal-footer d-flex justify-content-center border-0">
        <button
          type="button"
          class="btn text-white"
          style="background-color: red;"
          data-bs-dismiss="modal"
        >
          Yes, delete <span class="text-lowercase">{title}</span>
        </button>
      </div></>)
      }

      
    </div>
  </div>
</div>
