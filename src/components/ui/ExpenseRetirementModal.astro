              <!-- Repeat for more employees -->
            </tbody>
          </table>
        </div>
      </div>

      <!-- Modal footer -->
      <div class="modal-footer d-flex justify-content-end border-0">
        <button
          type="button"
          class="btn text-white bg-primary-blue px-5 fs-14"
          data-bs-dismiss="modal"
        >
