// components/ui/ModalAddNew.astro
const { modalId = "approveModal", title = "Request" } = Astro.props;
import { CloseCircleIcon } from "../Icons";
---

<div class="modal fade" id={modalId} tabindex="-1">
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <!-- Modal Header -->

      <!-- Modal body -->
      <div class="modal-body text-left py-2 border-0">
        <!-- Scrollable Table -->
        <div
          class="table-responsive"
          style="max-height: 600px; overflow: auto;"
        >
          <table class="table table-bordered table-hover">
            <!---- Table head --->
            <thead
              class="bg-primary-blue text-white px-4 fw-600 fs-14 text-nowrap"
            >
              <tr>
                <th class="bg-primary-blue text-white px-4 fw-600 fs-14"></th>
                <th class="bg-primary-blue text-white px-4 fw-600 fs-14">S/N</th
                >
                <th
                  class="bg-primary-blue text-white fw-600 fs-14 px-3 text-left"
                  >Date</th
                >
                <th
                  class="bg-primary-blue text-white fw-600 fs-14 px-3 text-left"
                  style="min-width: 200px;">Title</th
                >
                <th
                  class="bg-primary-blue text-white fw-600 fs-14 px-3 text-left"
                  >Category</th
                >
                <th
                  class="bg-primary-blue text-white fw-600 fs-14 px-3 text-left"
                  >Amount</th
                >

                <th
                  class="bg-primary-blue text-white px-3 fw-600 fs-14 text-nowrap text-left"
                  >Status</th
                >
              </tr>
            </thead>
            <tbody>
              <!-- Table body and Row -->
              <style>
                .column {
                  min-width: 180px;
                }
              </style>
