---
// components/ui/ModalAddNew.astro
const { modalId = "comment", title = "Comparison and Baseline" } = Astro.props;
import { CloseCircleIcon } from "../Icons";
---

<div class="modal fade" id={modalId} tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content p-2">
      <!-- Modal Header -->

      <div class="modal-header border-0 d-flex justify-content-between">
        <h4 class="modal-title fs-22 fw-700" id="modalTitle">
          {title}
        </h4>

        <img
          role="button"
          data-bs-dismiss="modal"
          src="images/png/icons/close-circle-1.svg"
          alt="close"
        />
      </div>

      <!-- Modal body -->
      <div class="modal-body text-left py-2 border-0">
        <div class="form-floating">
          <select
            id="compared"
            name="compared"
            class="form-select_custom fs-14"
            required
          >
            <option value="" style="color: rgb(200, 200, 200)" selected
              >None</option
            >
            <option value="1">Previous Period</option>
            <option value="2">Custom Date</option>
          </select>
          <label for="compared">Compare To </label>
        </div>

        <div
          class="d-flex gap-4 mt-3 justify-content-between align-items-center mt-5 w-50"
        >
          <span class="fs-14">Show Variance</span>
          <div
            role="button"
            class="form-check form-switch switchForDeductionsFields"
            style="margin-top: 5px; cursor: pointer"
          >
            <input
              class="form-check-input"
              type="checkbox"
              role="switch"
              id="toggleSwitch"
            />
          </div>
        </div>
      </div>

      <!-- Modal footer -->
      <div class="modal-footer d-flex fs-12 justify-content-end border-0 mt-5">
        <button
          type="button"
          class="btn bg-primary-blue text-white fs-12"
          id="apply"
          data-bs-dismiss="modal"
        >
          Apply
        </button>
      </div>
    </div>
  </div>
</div>

<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    $("#comparisonDisplay").addClass("d-none");

    $("#apply").click((evt) => {
      //   $(".confirmCancel").addClass("d-none");
      $("#comparisonDisplay").removeClass("d-none");
    });
  });
</script>
