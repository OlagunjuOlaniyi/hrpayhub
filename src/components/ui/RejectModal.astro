---
// components/ui/ModalAddNew.astro
const { modalId = "rejectModal", title = "Request" } = Astro.props;
import { CloseCircleIcon } from "../Icons";
---

<div class="modal fade" id={modalId} tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content p-5">
      <!-- Modal Header -->
      <div class="modal-header border-0 d-flex justify-content-end">
        <img
          type="button"
          data-bs-dismiss="modal"
          src="images/png/icons/close-circle-1.svg"
          alt="close"
        />
      </div>

      <!-- Modal body -->
      <div class="modal-body text-center py-2 border-0">
        <img src="images/png/icons/warning.svg" alt="warning" />
        <p class="fs-22 fw-bold mt-3">Reject {title}</p>
        <p>Are you sure you want to decline this {title}?</p>

        <div class="form-floating expense_input mt-5 mx-auto">
          <textarea class="form-input" rows="3" id="comment"></textarea>
          <label for="ex_title"
            >Add a comment (optional) &nbsp;<span>*</span></label
          >
        </div>
      </div>

      <!-- Modal footer -->
      <div class="modal-footer d-flex justify-content-center border-0">
        <button
          type="button"
          class="btn text-white"
          style="background-color: red;"
          data-bs-dismiss="modal"
        >
          Yes, reject {title}
        </button>
      </div>
    </div>
  </div>
</div>
