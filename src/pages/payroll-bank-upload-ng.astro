<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    document
      .getElementById("generate_report_form")
      ?.addEventListener("submit", (e) => {
        e.preventDefault();

        $("#view_report").addClass("d-none");
        const submitBtn = e.target.querySelector("button");

        submitBtn.innerHTML = `
                        <span>
                            <span class="spinner-border spinner-border-sm" aria-hidden="true"></span>
                            <span role="status">Loading...</span>
                        </span>
                    `;
        submitBtn.disabled = true;

        setTimeout(() => {
          submitBtn.innerHTML = `
                            <span>Generate Payroll Bank Upload File</span>
                        `;
          submitBtn.disabled = false;
          $("#manage_report").addClass("d-none");
          $("#view_report").removeClass("d-none");
        }, 1000);
      });

    $("#back_to_manage_report").click((evt) => {
      $("#view_report").addClass("d-none");
      $("#manage_report").removeClass("d-none");
    });

    $("#fileInputBtn").click((evt) => {
      $("#fileInput").click();
    });

    function toggleSalaryView() {
      if ($("#netSalary").is(":checked")) {
        $("#netSalaryText").removeClass("d-none");
        $("#netVariableText").addClass("d-none");
      } else {
        $("#netSalaryText").addClass("d-none");
        $("#netVariableText").removeClass("d-none");
      }
    }

    // Initial call on load
    toggleSalaryView();

    // Bind change event to radio buttons
    $("input[name='starter']").change(toggleSalaryView);
  });
</script>

