              <div class="d-flex align-items-center gap-3">
                <input
                  type="text"
                  class="form-control search-input search-width fs-14"
                  placeholder="Search..."
                />
                <img
                  src="images/png/icons/initialize.svg"
                  class="initialize"
                  width="24"
                  height="24"
                  alt="arrow-down"
                />
              </div>

              <!-- Others -->
              <div class="responsive gap-1">
                <!-- Download Dropdown -->

                <div class="dropdown">
                  <button
                    class="delon-primary-btn bg-primary-blue border-0 text-white fw-600 fs-14 dropdown-toggle dropdown-no-arrow d-flex align-items-center gap-2"
                    type="button"
                    data-bs-toggle="dropdown"
                    aria-expanded="false"
                    data-bs-offset="-20,10"
                  >
                    <img src="images/png/icons/download.svg" alt="arrow-down" />
                    <span>Download</span>
                    <img
                      src="images/png/icons/arrow-down.svg"
                      alt="arrow-down"
                    />
                  </button>
                  <div class="dropdown-menu p-0 border-0">
                    <ul class="list-group border-0 fw-600 fs-14">
                      <li class="list-group-item">
                        <div>CSV</div>
                      </li>
                      <li class="list-group-item">
                        <div>Excel</div>
                      </li>
                      <li class="list-group-item">
                        <div>PDF</div>
                      </li>
                    </ul>
                  </div>
                </div>
              </div>

              <!---- End of Others ---->
            </div>
          </div>

          {/* Page Content Box */}

          <!-- Scrollable Table -->
          <div
            class="table-responsive"
            style="max-height: 600px; overflow: auto;"
          >
            <table class="table table-bordered table-hover">
              <!---- Table head --->
              <thead
                class="bg-primary-blue text-white px-4 fw-600 fs-14 text-nowrap"
              >
                <tr>
                  <th class="bg-primary-blue text-white px-4 fw-600 fs-14"
                    >S/N</th
                  >
                  <th
                    class="bg-primary-blue text-white px-3 fw-600 fs-14 text-left"
                    style="min-width: 200px;">Employee ID</th
                  >
                  <th
                    class="bg-primary-blue text-white px-3 fw-600 fs-14 text-left"
                    style="min-width: 200px;">Employee Name</th
                  >
                  <th
                    class="bg-primary-blue text-white px-3 fw-600 fs-14 text-left"
                    >Department</th
                  >
                  <th
                    class="bg-primary-blue text-white px-3 fw-600 fs-14 text-left"
                    >Designation</th
                  >
                  <th
                    class="bg-primary-blue text-white px-3 fw-600 fs-14 text-left"
                    >Leave Type</th
                  >
                  <th
                    class="bg-primary-blue text-white px-3 fw-600 fs-14 text-nowrap text-left"
                    >Number of Days</th
                  >

                  <th
                    class="bg-primary-blue text-white px-3 fw-600 fs-14 text-center"
                    >Leave Start Date</th
                  >
                  <th
                    class="bg-primary-blue text-white px-3 fw-600 fs-14 text-center"
                    >Leave Start Date</th
                  >
                  <th
                    class="bg-primary-blue text-white px-3 fw-600 fs-14 text-center"
                  ></th>
                </tr>
              </thead>
              <tbody>
                <!-- Table body and Row -->
                <style>
                  .column {
                    min-width: 180px;
                  }
                  .column2 {
                    min-width: 250px;
                  }
                </style>
