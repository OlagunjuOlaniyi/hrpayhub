          submitBtn.innerHTML = `
                            <span>Proceed</span>
                        `;
          submitBtn.disabled = false;
          $("#manage_report").addClass("d-none");
          $("#view_report").removeClass("d-none");
        }, 1000);
      });

    $("#back_to_manage_report").click((evt) => {
      $("#view_report").addClass("d-none");
