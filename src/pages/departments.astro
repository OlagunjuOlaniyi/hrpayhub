            </div>
            <!-- Table section -->

            <!-- Pagination Row -->
            <div
              class="d-flex justify-content-between align-items-center flex-wrap gap-3 pt-3"
            >
              <!-- Left: Pagination Text -->
              <div class="fs-14 text-muted">
                Showing <strong>1–20</strong> of <strong>1000</strong>
