    <script>
      $(document).ready(function () {
        $(".toggle-eye").on("click", function () {
          const $passwordInput = $("#password");

          const $showEye = $(this).find(".show-eye");
          const $hideEye = $(this).find(".hide-eye");

          if ($passwordInput.attr("type") === "password") {
            $passwordInput.attr("type", "text");
            $showEye.hide();
            $hideEye.show();
          } else {
            $passwordInput.attr("type", "password");
            $showEye.show();
            $hideEye.hide();
          }
        });
        $(".toggle-eye-confirm").on("click", function () {
          const $confirmPasswordInput = $("#confirm_password");
          const $showEye = $(this).find(".show-eye");
          const $hideEye = $(this).find(".hide-eye");

          if ($confirmPasswordInput.attr("type") === "password") {
            $confirmPasswordInput.attr("type", "text");
            $showEye.hide();
            $hideEye.show();
          } else {
            $confirmPasswordInput.attr("type", "password");
            $showEye.show();
            $hideEye.hide();
          }
        });

        let currentStep = 1;

        function updateSteps() {
          $(".form-step").addClass("d-none");
          $(`.step-${currentStep}`).removeClass("d-none");

          // Show top back button if not on step 1
          if (currentStep > 1) {
            $(".back-btn").removeClass("invisible");
          } else {
            $(".back-btn").addClass("invisible");
          }

          // Update step circles
          $(".step-circle").each(function () {
            const step = parseInt($(this).data("step"));

            if (step < currentStep) {
              $(this)
                .html("✔")
                .addClass("step-complete")
                .removeClass("step-active");
            } else if (step === currentStep) {
              $(this)
                .html("<span class='progress_inner'></span>")
                .addClass("step-active")
                .removeClass("step-complete");
            } else {
              $(this).html("").removeClass("step-active step-complete");
            }
          });
        }

        $(".next-btn").on("click", function () {
          const $currentForm = $(`.step-${currentStep}`);
          const inputs = $currentForm.find("input, select");

          let isValid = true;
          inputs.each(function () {
            if ($(this).prop("required") && !$(this).val()) {
              isValid = false;
              $(this).addClass("is-invalid");
            } else {
              $(this).removeClass("is-invalid");
            }
          });

          if (isValid && currentStep < 3) {
            currentStep++;
            updateSteps();
          }
        });

        $(".back-btn").on("click", function () {
          if (currentStep > 1) {
            currentStep--;
            updateSteps();
          }
        });

        $("#signupForm").on("submit", function (e) {
          e.preventDefault();
          alert("Form submitted!");
        });

        const countrySelect = document.getElementById("country");
        const stateSelect = document.getElementById("state_select");
        const postcodeField = document.getElementById("postcode_select");
        const stateSelect2 = document.getElementById("state_select2");
        const postcodeField2 = document.getElementById("postcode_select2");

        // On country change
        countrySelect.addEventListener("change", () => {
          const country = countrySelect.value;

          if (country === "1") {
            // Nigeria
            stateSelect.style.display = "block";
            postcodeField.style.display = "none";
            stateSelect2.style.display = "block";
            postcodeField2.style.display = "none";
            $(".packages_ng").removeClass("d-none"); // show ng
            $(".packages_uk").addClass("d-none").prop("required", false); // hide uk
          } else if (country === "2") {
            // UK
            stateSelect.style.display = "none";
            postcodeField.style.display = "block";
            stateSelect2.style.display = "none";
            postcodeField2.style.display = "block";
            $(".packages_uk").removeClass("d-none"); // show ng
            $(".packages_ng").addClass("d-none").prop("required", false); // hide uk
          } else {
            stateSelect.style.display = "none";
            postcodeField.style.display = "none";
            $(".packages_ng").addClass("d-none"); // show ng
            $(".packages_uk").addClass("d-none"); // hide uk
          }
        });

        $('input[name="subscription"]').change(function () {
          // Reset all to unchecked
          $('label[for="free-trial"] img').addClass("d-none");
          $('label[for="buy-now"] img').addClass("d-none");

          // Disable both buttons by default
          $("#start-free-trial").prop("disabled", true);
          $("#subscribe-pay").prop("disabled", true);
          $(".packages_ng").prop("disabled", true);
          $(".packages_uk").prop("disabled", true);
          $(".no_of_users").prop("disabled", true);
          $(".total_amount").prop("disabled", true);
          $("#amount_vat").addClass("d-none");
          $("#amount_vat_txt").addClass("d-none");

          $('label[for="free-trial"] img:last-child').removeClass("d-none"); // unchecked
          $('label[for="buy-now"] img:last-child').removeClass("d-none"); // unchecked

          // Show checked-dot for selected radio
          if ($("#free-trial").is(":checked")) {
            $('label[for="free-trial"] .checked').removeClass("d-none"); // checked
            $('label[for="free-trial"] .unchecked').addClass("d-none"); // hide unchecked
            $("#start-free-trial").prop("disabled", false);
            $(".packages_ng").prop("value", "3");            
            $(".packages_uk").prop("value", "3");
            $(".no_of_users").prop("value", "3");
            $(".total_amount").prop("disabled", false);
          }

          if ($("#buy-now").is(":checked")) {
            $('label[for="buy-now"] .checked').removeClass("d-none"); // checked
            $('label[for="buy-now"] .unchecked').addClass("d-none"); // hide unchecked
            $("#start-free-trial").prop("disabled", "true");
            $("#subscribe-pay").prop("disabled", false);
            $(".total_amount").prop("disabled", false);
            $(".packages_ng").prop("disabled", false);
            $(".packages_uk").prop("disabled", false);
            $(".no_of_users").prop("disabled", false);
            $("#amount_vat").removeClass("d-none");
            $("#amount_vat_txt").removeClass("d-none");
          }
        });

        $('input[name="payment"]').change(function () {
          // Reset all to unchecked
          $('label[for="free-trial"] img').addClass("d-none");
          $('label[for="buy-now"] img').addClass("d-none");

          // Disable card  and bank details by default
          $(".payment_information").addClass("d-none");
          $("#card_details").addClass("d-none"); // hide unchecked
          $("#bank_details").addClass("d-none"); // hide unchecked

          // Show checked-dot for selected radio
          if ($("#card-details").is(":checked")) {
            $('label[for="card-details"] .checked').removeClass("d-none"); // checked
            $('label[for="card-details"] .unchecked').addClass("d-none"); // hide unchecked
            $(".payment_information").removeClass("d-none");
            $("#card_details").removeClass("d-none");
            $("#bank_details").addClass("d-none");
          }

          if ($("#bank-details").is(":checked")) {
            $('label[for="bank-details"] .checked').removeClass("d-none"); // checked
            $('label[for="bank-details"] .unchecked').addClass("d-none"); // hide unchecked
            $(".payment_information").removeClass("d-none");
            $("#bank_details").removeClass("d-none");
            $("#card_details").addClass("d-none");
          }
        });
      });
    </script>
  </body>
