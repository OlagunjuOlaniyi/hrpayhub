---
import Layout from "../layouts/Layout.astro";
---

<Layout title="HRPayHub :: Task Assignment & Scheduling">
  <!-- Main content starts here -->
  <main>
    <!-- First section of Back button and Breadcrumb -->
    <section class="p-4">
      <div class="screenFrame">
        <!-- Back Navigation button and BreadCrumbs -->
        <div class="d-flex gap-5">
          <a
            href="/task-management"
            title="Back to Dashboard"
            class="d-flex gap-2 align-items-center text-decoration-none text-primary-dark"
          >
            <img src="images/png/icons/angle-left.svg" alt="angle-left-back" />
            <span class="fs-16 fw-bold font-avenir-bold">Back</span>
          </a>

          <!-- Actual Breadcrumb here -->
          <div class="d-flex align-items-center gap-2">
            <a
              href="index.html"
              class="fs-14 text-decoration-none text-primary-dark">Dashboard</a
            >
            <img
              src="images/png/icons/angle-right.svg"
              alt="angle-right-back"
            />
            <a
              href="/task-management"
              class="fs-14 text-decoration-none text-primary-dark"
              >Task Management</a
            >

            <img
              src="images/png/icons/angle-right.svg"
              alt="angle-right-back"
            />
            <span class="fs-16 fw-bold text-primary-blue"
              >Task Assignment & Scheduling</span
            >
          </div>
          <!-- Actual Breadcrumb here -->
        </div>
        <!-- Back Navigation button and BreadCrumbs -->
      </div>
    </section>
    <!-- First section of Back button and Breadcrumb -->

    <!-- First section of Back button and Breadcrumb -->
    <section class="px-4">
      <div class="screenFrame">
        <div class="rounded-4 shadow p-4 vstack gap-5 px-5">
          {/* Page Content Box */}
          <div class="p-lg-5">
            <div class="vstack" style="gap: 2.3rem">
              <!---- Appraisal Setup --->
              <div class="d-flex align-items-center gap-4 add_employee_width">
                <div class="fs-14 fw-600 text-primary-blue">
                  Task Assignment & Scheduling
                </div>
                <div class="flex-grow-1">
                  <div class="demarcator_line">&nbsp;</div>
                </div>
              </div>

              <!---- body ---->
              <div class="form-floating add_employee_width">
                <input
                  type="text"
                  id="task_title"
                  name="task_title"
                  class="form-input fs-14"
                  placeholder=""
                />
                <label for="task_title">Task Title &nbsp;<span>*</span></label>
              </div>
              <div class="form-floating add_employee_width">
                <textarea class="form-input" rows="2" id="description"
                ></textarea>
                <label for="description">Description &nbsp;<span>*</span></label
                >
              </div>
              <div class="form-floating add_employee_width">
                <input
                  type="date"
                  id="deadline"
                  name="deadline"
                  class="form-input fs-14"
                  placeholder=""
                />
                <label for="deadline">Due Date &nbsp;<span>*</span></label>
              </div>
              <div class="form-floating add_employee_width">
                <select
                  id="priority"
                  name="priority"
                  class="form-select_custom fs-14"
                >
                  <option value="" selected style="color: rgb(200, 200, 200)"
                    >Select</option
                  >
                  <option value="high">High</option>
                  <option value="medium">Medium</option>
                  <option value="low">Low</option>
                </select>
                <label for="priority">Priority &nbsp;<span>*</span></label>
              </div>
              <div class="form-floating add_employee_width">
                <select
                  id="label"
                  name="label"
                  class="form-select_custom fs-14"
                >
                  <option value="" selected style="color: rgb(200, 200, 200)"
                    >Select</option
                  >
                  <option value="label 1">Label 1</option>
                  <option value="label 2">Label 2</option>
                  <option value="label 3">Label 3</option>
                </select>
                <label for="label">Labels</label>
              </div>
              <div class="form-floating add_employee_width">
                <select
                  id="assign"
                  name="assign"
                  class="form-select_custom fs-14"
                >
                  <option value="" selected style="color: rgb(200, 200, 200)"
                    >Select</option
                  >
                  <option value="assignee 1">Waden Warren - N1202003</option>
                  <option value="assignee 2">Waden Warren - N1202003</option>
                  <option value="assignee 3">Waden Warren - N1202003</option>
                </select>
                <label for="assign">Assigned To &nbsp;<span>*</span></label>
              </div>

              <!---- submit ---->
              <div class="d-flex justify-content-end add_employee_width">
                <button
                  type="button"
                  id="upload"
                  class="delon-primary-btn bg-primary-blue border-0 text-white fw-bold fs-14 expense_button"
                >
                  <span>Submit</span>
                </button>
              </div>
            </div>
          </div>
        </div>
        {/* Page Content Box */}
      </div>
    </section>
  </main>

  <script is:inline>
    document.addEventListener("DOMContentLoaded", () => {
      $("#fileInputBtn").click((evt) => {
        $("#fileInput").click();
      });
    });
  </script>
</Layout>
<!-- Main content ends here -->
