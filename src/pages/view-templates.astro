            <span class="fs-16 fw-bold text-primary-blue">View Templates</span>
          </div>
          <!-- Actual Breadcrumb here -->
        </div>
        <!-- Back Navigation button and BreadCrumbs -->
      </div>
    </section>
    <!-- First section of Back button and Breadcrumb -->

    <!-- First section of Back button and Breadcrumb -->
    <section class="px-lg-4">
      <div class="screenFrame">
        <div
          class="rounded-4 shadow p-4 vstack gap-3 px-lg-5"
          id="manage_list_of_payslip"
        >
          {/* Page Title */}
          <div class="vstack gap-3">
            <div class="d-flex gap-3 align-items-center">
              <span class="text-dark font-ubuntu-bold fs-18 inline-block"
                >View Templates</span
              >
            </div>
          </div>
          {/* Page Title */}

          <div class="">
            <div
              class="d-flex vstack flex-sm-column flex-md-column flex-lg-row justify-content-between gap-3"
            >
              <!---- Search  -->
              <div class="d-flex align-items-center gap-3">
                <input
                  type="text"
                  class="form-control search-input search-width fs-14"
                  placeholder="Search..."
                />
                <img
                  src="images/png/icons/initialize.svg"
                  class="initialize"
                  width="24"
                  height="24"
                  alt="arrow-down"
                />
              </div>

              <!-- Others -->
              

              <!---- End of Others ---->
            </div>
          </div>

          <!-- Scrollable Table -->
          <div
            class="table-responsive"
            style="max-height: 600px; overflow: auto;"
          >
            <table class="table table-bordered table-hover">
              <!---- Table head --->
              <thead
                class="bg-primary-blue text-white px-4 fw-600 fs-14 text-nowrap"
              >
                <tr>
                  <th class="bg-primary-blue text-white px-4 fw-600 fs-14"
                    ></th
                  >
                  <th class="bg-primary-blue text-white px-4 fw-600 fs-14"
                    >S/N</th
                  >
                  <th
                    class="bg-primary-blue text-white fw-600 fs-14 px-3 text-left"
                    style="min-width: 200px;">Template Name</th
                  >
                  <th
                    class="bg-primary-blue text-white px-3 fw-600 fs-14 text-left"
                    >Document Type</th
                  >
                  <th
                    class="bg-primary-blue text-white px-3 fw-600 fs-14 text-left"
                    >Subject</th
                  >
                  <th
                    class="bg-primary-blue text-white px-3 fw-600 fs-14 text-left"
                    >Preview</th
                  >
                  

                  <th
                    class="bg-primary-blue text-white px-3 fw-600 fs-14 text-nowrap text-center"
                    >Actions</th
                  >
                </tr>
              </thead>
              <tbody>
                <!-- Table body and Row -->
                <style>
                  .column {
                    min-width: 180px;
                  }
                </style>
                {
                  [
                    {
                      temp_type: "Sample Query Letter",
                      doc_type: "Query",
                      subject: "Query on xxxxxxx",
                      preview: "Dear [Employee Name],",
                      
                    },
                    {
                      temp_type: "Sample Query Letter",
                      doc_type: "Query",
                      subject: "Query on xxxxxxx",
                      preview: "Dear [Employee Name],",
                    },
                    {
                      temp_type: "Sample Query Letter",
                      doc_type: "Query",
                      subject: "Query on xxxxxxx",
                      preview: "Dear [Employee Name],",
                    },
                    {
                      temp_type: "Sample Query Letter",
                      doc_type: "Query",
                      subject: "Query on xxxxxxx",
                      preview: "Dear [Employee Name],",
                    },
                    {
                      temp_type: "Sample Query Letter",
                      doc_type: "Query",
                      subject: "Query on xxxxxxx",
                      preview: "Dear [Employee Name],",
                    },
                    {
                      temp_type: "Sample Query Letter",
                      doc_type: "Query",
                      subject: "Query on xxxxxxx",
                      preview: "Dear [Employee Name],",
                    },
                    {
                      temp_type: "Sample Query Letter",
                      doc_type: "Query",
                      subject: "Query on xxxxxxx",
                      preview: "Dear [Employee Name],",
                    },
                  ].map((ele, index) => (
                    <tr class="fs-88">
                    <td class="fs-14 px-3 d-flex justify-content-center">
                      <div class="d-flex gap-2">
                        <button
                          class="border-0 edit-button"
                          style="background-color: inherit;"
                          type="button"                          
                        >
                          <img src="images/png/icons/square-check.svg" alt="" />
                        </button>
                      </div>
                    </td>
                      <td class="text-center fs-14">{index + 1}</td>
                      <td class="fs-14 text-nowrap px-3 text-left column">
                        {ele.temp_type}
                      </td>
                      <td class="fs-14 px-3 text-left column">
                        {ele.doc_type}
                      </td>
                      <td class="fs-14 px-3 text-left column">
                        {ele.subject}
                      </td>
                      <td class="fs-14 px-3 text-left column">
                        {ele.preview}
                      </td>                     

                      <td class="fs-14 px-3 text-center d-flex justify-content-center column">
                        <div class="d-flex gap-2">
                          <button
                            class="border-0 edit-button"
                            style="background-color: inherit;"
                            type="button"
                            data-bs-toggle="modal"
                            data-bs-target="#myModal"
                            data-title="Edit Template"
                            data-emp-type="{ele.emp_type}"
                          >
                            <img src="images/png/icons/edit-2.svg" alt="" />
                          </button>
                          <button
                            class="border-0"
                            style="background-color: inherit;"
                            data-bs-toggle="modal"
                            data-bs-target="#deleteModal"
                          >
                            <img
                              src="images/png/icons/colored/delete.svg"
                              alt=""
                            />
                          </button>
                        </div>
                      </td>
                    </tr>
                  ))
                }

                <!-- Repeat for more employees -->
              </tbody>
            </table>
          </div>

          <!---- End of table --->

          
        </div>
        <ModalAddNew
          modalId="myModal"
          title={"Edit Template"}
          inputPlace="Template"
        />
        <DeleteModal modalId="deleteModal" title="Template" />

        <!---- end of Modal --->
      </div>
    </section>
  </main>

  <!-- Main content ends here -->

  <script is:inline type="text/javascript">
    // Handle opening the modal
    document
      .querySelectorAll('[data-bs-target="#myModal"]')
      .forEach((button) => {
        button.addEventListener("click", function () {
          const modalTitle =
            this.getAttribute("data-title") || "Add Employee Type";
          const empType = this.getAttribute("data-emp-type") || "";

          // Update modal title
          const modalTitleElement = document.getElementById("modalTitle");
          if (modalTitleElement) {
            modalTitleElement.textContent = modalTitle;
          }

          // Update input field
          const employeeStatusInput = document.getElementById("employee_type");
          if (employeeStatusInput) {
            employeeStatusInput.value = empType;
          }
        });
      });
  </script>
</Layout>
