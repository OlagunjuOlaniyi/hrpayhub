---
import Layout from "../layouts/Layout.astro";
import Inbox from "../components/emails/Inbox.astro";
import Sent from "../components/emails/Sent.astro";
---

<Layout title="HRPayHub :: External Emails">
  <!-- Main content starts here -->
  <main>
    <!-- First section of Back button and Breadcrumb -->
    <section class="p-4">
      <div class="screenFrame">
        <!-- Back Navigation button and BreadCrumbs -->
        <div class="d-flex gap-5">
          <a
            href="/email-management"
            title="Back to Dashboard"
            class="d-flex gap-2 align-items-center text-decoration-none text-primary-dark"
          >
            <img src="images/png/icons/angle-left.svg" alt="angle-left-back" />
            <span class="fs-16 fw-bold font-avenir-bold">Back</span>
          </a>

          <!-- Actual Breadcrumb here -->
          <div class="d-flex align-items-center gap-2">
            <a
              href="index.html"
              class="fs-14 text-decoration-none text-primary-dark">Dashboard</a
            >
            <img
              src="images/png/icons/angle-right.svg"
              alt="angle-right-back"
            />
            <a
              href="/document-management"
              class="fs-14 text-decoration-none text-primary-dark"
              >Document Management</a
            >
            <img
              src="images/png/icons/angle-right.svg"
              alt="angle-right-back"
            />
            <a
              href="/email-management"
              class="fs-14 text-decoration-none text-primary-dark"
              >Email Management</a
            >
            <img
              src="images/png/icons/angle-right.svg"
              alt="angle-right-back"
            />
            <span class="fs-16 fw-bold text-primary-blue">External Emails</span>
          </div>
          <!-- Actual Breadcrumb here -->
        </div>
        <!-- Back Navigation button and BreadCrumbs -->
      </div>
    </section>
    <!-- First section of Back button and Breadcrumb -->

    <!-- First section of Back button and Breadcrumb -->
    <section class="px-4">
      <div class="screenFrame">
        <div class="rounded-4 shadow pb-4 vstack gap-5 pe-3">
          {/* Page Title */}

          <div class="d-flex align-items-start">
            <div
              class="nav flex-column nav-pills me-3 bg-light p-2 py-3 email_nav"
              style="height: 100vh;"
              id="v-pills-tab"
              role="tablist"
              aria-orientation="vertical"
            >
              <button
                class="white_button fw-700 mb-4 px-5 text-nowrap send_mail"
                >Send Mail +</button
              >
              <button
                class="nav-link active"
                id="v-pills-inbox-tab"
                data-bs-toggle="pill"
                data-bs-target="#v-pills-inbox"
                type="button"
                role="tab"
                aria-controls="v-pills-inbox"
                aria-selected="true"
              >
                <img
                  src="images/png/icons/inbox.svg"
                  class="me-3 icon-toggle"
                  data-default="images/png/icons/inbox-blue.svg"
                  data-blue="images/png/icons/inbox.svg"
                  alt="inbox"
                />
                Inbox
              </button>

              <button
                class="nav-link"
                id="v-pills-sent-tab"
                data-bs-toggle="pill"
                data-bs-target="#v-pills-sent"
                type="button"
                role="tab"
                aria-controls="v-pills-sent"
                aria-selected="false"
              >
                <img
                  src="images/png/icons/sent-icon-blue.svg"
                  class="me-3 icon-toggle"
                  data-default="images/png/icons/sent-icon-blue.svg"
                  data-blue="images/png/icons/sent-icon.svg"
                  alt="sent"
                />
                Sent
              </button>
            </div>
            <div class="tab-content flex-grow-1" id="v-pills-tabContent">
              <div
                class="tab-pane fade show active"
                id="v-pills-inbox"
                role="tabpanel"
                aria-labelledby="v-pills-inbox-tab"
              >
                <Inbox />
              </div>
              <div
                class="tab-pane fade"
                id="v-pills-sent"
                role="tabpanel"
                aria-labelledby="v-pills-sent-tab"
              >
                <Sent />
              </div>
            </div>
          </div>
          {/* Page Content Box */}
        </div>
      </div>
    </section>

    <!-- Custom New Message Dialog Box -->
    <div
      id="newMessageBox"
      class="position-fixed border border-light bg-white"
      style="
    bottom: 20px;
    right: 20px;
    width: 81vw;
    height: 450px;
    display: none;
    z-index: 1050;
    overflow-y: scroll;
  "
    >
      <div
        class="border-bottom p-3 py-2 d-flex justify-content-between align-items-center bg-primary-blue text-white"
      >
        <h6 class="mb-0">New Message</h6>

        <button
          type="button"
          class="btn-close btn-sm btn-close-white"
          id="closeMessageBox"></button>
      </div>

      <div class="p-3">
        <div
          class="d-flex justify-content-between gap-3 mb-2 pb-2 border-0 border-bottom"
        >
          <div class="flex-grow-1">
            <input
              type="text"
              class="form-control border-0"
              placeholder="Recipients"
            />
          </div>
          <div class="fs-12 d-flex gap-4">
            <span role="button" id="Cc">Cc</span>
            <span role="button" id="Bcc">Bcc</span>
          </div>
        </div>

        <div
          class="d-flex justify-content-between gap-3 mb-2 pb-2 border-0 border-bottom d-none"
          id="Cc_field"
        >
          <div class="flex-grow-1">
          <input
            type="text"
            class="form-control border-0"
            placeholder="Cc"
          />
        </div>
            <div >
              <span role="button" class="fw-700 pe-3" id="closeCc">x</span>
            </div>
          </div>
        
        <div
          class="d-flex justify-content-between gap-3 mb-2 pb-2 border-0 border-bottom d-none"
          id="Bcc_field"
        >
        <div class="flex-grow-1">
          <input
            type="text"
            class="form-control border-0"
            placeholder="Bcc"
          />
        </div>
          <div >
              <span role="button" class="fw-700 pe-3" id="closeBcc">x</span>
            </div>
        </div>

        <div class="mb-3">
          <input
            type="text"
            class="form-control border-0 border-bottom"
            placeholder="Subject"
            id="emailSubject"
          />
        </div>
        
        <div class="mb-3">
          <textarea
            class="form-control border-0 fs-14"
            rows="7"
            placeholder="Add text"
            id="emailBody"></textarea>
        </div>

        
        <div class="d-flex justify-content-between w-50 py-2 my-3">
                    <div id="filePreviewList" class="d-flex flex-column gap-2">
  <!-- Files will be added here -->
</div>

                  </div>

        <div class="d-flex gap-3 align-items-center">
          <div class="d-flex align-items-center gap-3">
            <button class="btn bg-primary-blue text-white">Send</button>
            <div class="d-flex align-items-center">

              <img
                role="button"
                src="images/png/icons/attached-icon.svg"
                alt="attached icon"
                
                />
              <input
                type="file"
                id="fileInput"
                multiple
                style="display: none;"
              />

            </div>
          </div>
          <img role="button" src="images/png/icons/colored/delete.svg" alt="" />
        </div>
      </div>
    </div>
  </main>
  <!-- Main content ends here -->

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      // Icon toggle for nav tabs
      const tabButtons = document.querySelectorAll(".email_nav .nav-link");
      tabButtons.forEach((button) => {
        button.addEventListener("shown.bs.tab", () => {
          tabButtons.forEach((btn) => {
            const icon = btn.querySelector(".icon-toggle");
            if (icon) {
              const isActive = btn.classList.contains("active");
              icon.src = isActive ? icon.dataset.blue : icon.dataset.default;
            }
          });
        });
      });

      // Open/Close New Message Dialog (custom box)
      const newMessageBox = document.getElementById("newMessageBox");
      const openBtn = document.querySelector(".send_mail");
      const closeBtn = document.getElementById("closeMessageBox");

      if (openBtn && newMessageBox && closeBtn) {
        openBtn.addEventListener("click", () => {
          newMessageBox.style.display = "block";
        });

        closeBtn.addEventListener("click", () => {
          newMessageBox.style.display = "none";
        });

        // Prevent closing on outside click
        document.addEventListener("click", function (e) {
          if (
            newMessageBox.style.display === "block" &&
            !newMessageBox.contains(e.target) &&
            e.target !== openBtn
          ) {
            // Do nothing
          }
        });
      }

      // file input functionality

      const attachedFileIcon = document.getElementById("attachedFile");
    const fileInput = document.getElementById("fileInput");
    const filePreviewList = document.getElementById("filePreviewList");

    let attachedFiles = [];

    attachedFileIcon.addEventListener("click", () => {
      fileInput.click();
    });

    fileInput.addEventListener("change", () => {
      const files = Array.from(fileInput.files);

      // Add only unique files by name (you can use a stronger check)
      files.forEach((file) => {
        if (!attachedFiles.find((f) => f.name === file.name)) {
          attachedFiles.push(file);
        }
      });

      renderFilePreview();
      // Clear the file input so the same file can be selected again
      fileInput.value = "";
    });

    function renderFilePreview() {
      filePreviewList.innerHTML = "";

      attachedFiles.forEach((file, index) => {
        const fileItem = document.createElement("div");
        fileItem.className = "d-flex justify-content-between align-items-center border p-2 rounded bg-light";

        fileItem.innerHTML = `
          <div class="d-flex align-items-center gap-2">
            <img src="images/png/icons/document-2.svg" alt="file" />
            <span class="fs-12">${file.name}</span>
          </div>
          <button class="btn btn-sm border-0 bg-transparent removeFile" data-index="${index}">
            <img src="images/png/icons/colored/delete.svg" alt="remove" />
          </button>
        `;

        filePreviewList.appendChild(fileItem);
      });

      // Attach remove event
      document.querySelectorAll(".removeFile").forEach((btn) => {
        btn.addEventListener("click", (e) => {
          const index = e.currentTarget.dataset.index;
          attachedFiles.splice(index, 1);
          renderFilePreview();
        });
      });
    }
    });
  </script>
  <script is:inline>
    document.addEventListener("DOMContentLoaded", () => {
      

      $("#Cc_field").addClass("d-none");
      $("#Bcc_field").addClass("d-none");

      $("#Cc").click((evt) => {
        $("#Cc_field").removeClass("d-none");
      });

      $("#closeCc").click((evt) => {
        $("#Cc_field").addClass("d-none");
      });

      $("#closeBcc").click((evt) => {
        $("#Bcc_field").addClass("d-none");
      });

      $("#Bcc").click((evt) => {
        $("#Cc_field").removeClass("d-none");
        $("#Bcc_field").removeClass("d-none");
      });
    });
  </script>
</Layout>
