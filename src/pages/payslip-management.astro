---
import BreadCrumbs from "../components/ui/BreadCrumbs";
import Layout from "../layouts/Layout.astro";
---

<Layout title="HRPayHub :: Payslip">
  <!-- Main content starts here -->
  <main>
    <!-- First section of Back button and Breadcrumb -->
    <section class="p-4">
      <div class="screenFrame">
        <!-- Back Navigation button and BreadCrumbs -->
        <div class="d-flex flex-md-row flex-column gap-md-5 gap-1 w-full">
          <a
            href="index.html"
            title="Back to Payslip"
            class="d-flex gap-2 align-items-center text-decoration-none text-primary-dark"
          >
            <img src="images/png/icons/angle-left.svg" alt="angle-left-back" />
            <span class="fs-16 fw-bold font-avenir-bold">Back</span>
          </a>

          <!-- Actual Breadcrumb here -->
          <BreadCrumbs
            data={[
              { name: "Dashboard", url: "index.html" },
              { name: "Payslip Management" },
            ]}
          />
          <!-- Actual Breadcrumb here -->
        </div>
        <!-- Back Navigation button and BreadCrumbs -->
      </div>
    </section>
    <!-- First section of Back button and Breadcrumb -->

    <!-- First section of Back button and Breadcrumb -->
    <section class="px-4">
      <div class="screenFrame">
        <div class="rounded-4 shadow p-4 vstack gap-5 px-5">
          {/* Page Title */}
          <div class="vstack gap-2">
            <div class="d-flex gap-3 align-items-center">
              <img
                src="images/png/icons/colored/receipt-minus-colored.svg"
                alt="receipt-minus-icon"
                width="30px"
                height="30px"
              />
              <span
                class="text-primary-blue font-ubuntu-bold fs-24 inline-block"
                >Payslip Management</span
              >
            </div>
            <div class="fw-bold">
              View and manage monthly payslips by country and pay type
            </div>
          </div>
          {/* Page Title */}

          {/* Page Content Box */}
          <div class="row justify-content-between payslip-grid-gap">
            {
              [
                {
                  title: "Monthly Payslip – UK (Salaried)",
                  desc: "View and manage payslip for UK salaried employees.",
                  url: "payslip-management",
                },
                {
                  title: "Monthly Payslip – UK (Hourly)",
                  desc: "View and manage payslip for UK hourly-paid employees.",
                  url: "payslip-management",
                },
                {
                  title: "Monthly Payslip – Nigeria (Salaried)",
                  desc: "View and manage payslip for Nigeria salaried employees.",
                  url: "payslip_monthly_nigeria_salaried.html",
                },
                {
                  title: "Monthly Payslip – Nigeria (Hourly)",
                  desc: "View and manage payslip for Nigeria hourly-paid employees.",
                  url: "payslip_hourly_nigeria_salaried.html",
                },
              ].map((ele) => (
                <a
                  class="col-4 p-2 payslip-card-panel text-decoration-none"
                  style="width: 360px; color: #202020 !important"
                  role="button"
                  title={ele.title}
                  href={ele.url}
                >
                  <div class="shadow p-3 px-3 rounded-3 d-flex flex-column align-items-center justify-content-center gap-3 text-center">
                    <div class="vstack gap-2 d-flex flex-column align-items-center">
                      <img
                        src="images/png/icons/colored/receipt-minus-colored.svg"
                        alt="receipt-minus-icon"
                        width="40px"
                        height="40px"
                      />
                      <div class="fw-bold fs-18 font-ubuntu-bold text-primary-blue">
                        {ele.title}
                      </div>
                    </div>

                    <div
                      class="fw-600 fs-16"
                      style="width: 90%; margin: 0 auto"
                    >
                      {ele.desc}
                    </div>
                  </div>
                </a>
              ))
            }
          </div>
          {/* Page Content Box */}
        </div>
      </div>
    </section>
  </main>
  <!-- Main content ends here -->

