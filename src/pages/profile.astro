                  disabled
                />
                <label for="emp_email">Email Address </label>
              </div>
              <div class="form-floating add_employee_width">
                <input
                  type="text"
                  id="user_role"
                  name="user_role"
                  class="form-input fs-14"
                  placeholder=""
                  value="Lorem Ipsum"
                  disabled
                />
                <label for="user_role">User Role </label>
              </div>
              <div class="form-floating add_employee_width">
                <input
                  type="text"
                  id="designation"
                  name="designation"
                  class="form-input fs-14"
                  placeholder=""
                  value="Lorem Ipsum"
                  disabled
                />
                <label for="designation">Designation </label>
              </div>
              <div class="form-floating add_employee_width">
                <input
                  type="text"
                  id="dpt"
                  name="dpt"
                  class="form-input fs-14"
                  placeholder=""
                  value="Lorem Ipsum"
                  disabled
                />
                <label for="dpt">Department </label>
              </div>
              <div class="form-floating add_employee_width">
                <input
                  type="text"
                  id="manager"
                  name="manager"
                  class="form-input fs-14"
