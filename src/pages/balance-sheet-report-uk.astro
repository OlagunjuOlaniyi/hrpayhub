          const modalTitle =
            this.getAttribute("data-title") || "Add Employee Type";
          const empType = this.getAttribute("data-emp-type") || "Input";

          // Update modal title
          const modalTitleElement = document.getElementById("modalTitle");
          if (modalTitleElement) {
            modalTitleElement.textContent = modalTitle;
