---
import Layout from "../layouts/Layout.astro";
---

<Layout title="HRPayHub :: Calculate Taxes">
  <!-- Main content starts here -->
  <main>
    <!-- First section of Back button and Breadcrumb -->
    <section class="p-4">
      <div class="screenFrame">
        <!-- Back Navigation button and BreadCrumbs -->
        <div class="d-flex gap-5">
          <a
            href="/calculate-taxes"
            title="Back to Dashboard"
            class="d-flex gap-2 align-items-center text-decoration-none text-primary-dark"
          >
            <img src="images/png/icons/angle-left.svg" alt="angle-left-back" />
            <span class="fs-16 fw-bold font-avenir-bold">Back</span>
          </a>

          <!-- Actual Breadcrumb here -->
          <div class="d-flex align-items-center gap-2">
            <a
              href="index.html"
              class="fs-14 text-decoration-none text-primary-dark">Dashboard</a
            >
            <img
              src="images/png/icons/angle-right.svg"
              alt="angle-right-back"
            />
            <span class="fs-16 fw-bold text-primary-blue">Calculate Taxes</span>
          </div>
          <!-- Actual Breadcrumb here -->
        </div>
        <!-- Back Navigation button and BreadCrumbs -->
      </div>
    </section>
    <!-- First section of Back button and Breadcrumb -->

    <!-- First section of Back button and Breadcrumb -->
    <section class="px-4">
      <div class="screenFrame">
        <div class="rounded-4 shadow p-4 vstack gap-5 px-5">
          {/* Page Title */}
          <div class="vstack gap-2">
            <div class="d-flex gap-3 align-items-center">
              <img
                src="images/png/icons/calculate-tax.svg"
                alt="receipt-minus-icon"
                width="30px"
                height="30px"
              />
              <span
                class="text-primary-blue font-ubuntu-bold fs-24 inline-block"
                >Calculate Taxes</span
              >
            </div>
            <div class="fw-bold">
              Upload template, auto-fill, and send offer to candidate for
              e-signature.
            </div>
          </div>
          {/* Page Title */}

          {/* Page Content Box */}
          <div class="row payslip-grid-gap mb-5">
            {
              [
                {
                  title: "Calculate Tax - UK",
                  desc: "Auto-calculate payroll tax for UK employees",
                  url: "/calculate-tax-uk",
                  img: "images/png/icons/calculate-tax-uk.svg",
                },
                {
                  title: "Calculate Tax - NG",
                  desc: "Auto-calculate payroll tax for Nigerian staff",
                  url: "/calculate-tax-ng",
                  img: "images/png/icons/calculate-tax-ng.svg",
                },
                {
                  title: "Free Nigeria Tax Calcuator",
                  desc: "Quick Nigerian tax estimates for web visitors",
                  url: "/free-tax-calculator",
                  img: "images/png/icons/calculate-tax-ng.svg",
                },
              ].map((ele) => (
                <div
                  class="col-3 p-2 payslip-card-panel"
                  style="width: 340px"
                  role="button"
                  title={ele.title}
                  data-url={ele.url}
                >
                  <div class="shadow p-3 px-3 rounded-3 d-flex flex-column align-items-center justify-content-center gap-3 text-center">
                    <div class="vstack gap-2 d-flex flex-column align-items-center">
                      <img
                        src={ele.img}
                        alt="receipt-minus-icon"
                        width="30px"
                        height="30px"
                      />
                      <div class="fw-bold fs-18 font-ubuntu-bold text-primary-blue">
                        {ele.title}
                      </div>
                    </div>

                    <div
                      class="fw-600 fs-16"
                      style="width: 90%; margin: 0 auto"
                    >
                      {ele.desc}
                    </div>
                  </div>
                </div>
              ))
            }
          </div>
          {/* Page Content Box */}
        </div>
      </div>
    </section>
  </main>
  <!-- Main content ends here -->

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const payslipCardPanels = document.querySelectorAll(
        ".payslip-card-panel",
      );

      payslipCardPanels.forEach((ele, index) => {
        ele?.addEventListener("click", (e) => {
          const url = ele.getAttribute("data-url") || "";
          const title = ele.getAttribute("title") || "";
          window.open(url, title);
        });
      });
    });
  </script>
</Layout>
