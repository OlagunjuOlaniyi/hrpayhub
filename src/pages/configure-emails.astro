---
import Layout from "../layouts/Layout.astro";

---

<Layout title="HRPayHub :: Configure Email">
  <!-- Main content starts here -->
  <main>
    <!-- First section of Back button and Breadcrumb -->
    <section class="p-4">
      <div class="screenFrame">
        <!-- Back Navigation button and BreadCrumbs -->
        <div class="d-flex gap-5">
          <a
            href="/configure-and-manage-external-emails"
            title="Back to Dashboard"
            class="d-flex gap-2 align-items-center text-decoration-none text-primary-dark"
          >
            <img src="images/png/icons/angle-left.svg" alt="angle-left-back" />
            <span class="fs-16 fw-bold font-avenir-bold">Back</span>
          </a>

          <!-- Actual Breadcrumb here -->
          <div class="d-flex align-items-center gap-2">
            <a
              href="index.html"
              class="fs-14 text-decoration-none text-primary-dark">Dashboard</a
            >
            <img
              src="images/png/icons/angle-right.svg"
              alt="angle-right-back"
            />
            <a
              href="/document-management"
              class="fs-14 text-decoration-none text-primary-dark"
              >Document Management</a
            >
            <img
              src="images/png/icons/angle-right.svg"
              alt="angle-right-back"
            />
            <a
              href="/email-management"
              class="fs-14 text-decoration-none text-primary-dark"
              >Email Management</a
            >
            <img
              src="images/png/icons/angle-right.svg"
              alt="angle-right-back"
            />
            <a
              href="/configure-and-manage-external-emails"
              class="fs-14 text-decoration-none text-primary-dark"
              >Configure and Manage External Emails</a
            >
            <img
              src="images/png/icons/angle-right.svg"
              alt="angle-right-back"
            />
            <span class="fs-16 fw-bold text-primary-blue">Configure Email</span>
          </div>
          <!-- Actual Breadcrumb here -->
        </div>
        <!-- Back Navigation button and BreadCrumbs -->
      </div>
    </section>
    <!-- First section of Back button and Breadcrumb -->

    <!-- First section of Back button and Breadcrumb -->
    <section class="px-4">
      <div class="screenFrame">
        <div class="rounded-4 shadow p-4 vstack gap-5 px-5">
          {/* Page Content Box */}
          <div class="p-lg-5">
            <div class="vstack" style="gap: 2.3rem">

            <!---- create template --->
              <div class="d-flex align-items-center gap-4 add_employee_width">
                <div class="fs-14 fw-600 text-primary-blue">Configure Email</div>
                <div class="flex-grow-1">
                  <div class="demarcator_line">&nbsp;</div>
                </div>
              </div>

              <!---- body ---->
            <div class="form-floating add_employee_width">
                <input
                  type="text"
                  id="server_type"
                  name="server_type"
                  class="form-input fs-14"
                  placeholder=""
                  
                />
                <label for="server_type">Email Server Type &nbsp;<span>*</span></label>
              </div>
            <div class="form-floating add_employee_width">
                <input
                  type="text"
                  id="server_address"
                  name="server_address"
                  class="form-input fs-14"
                  placeholder=""
                  
                />
                <label for="server_address">Server Address &nbsp;<span>*</span></label>
              </div>
            <div class="form-floating add_employee_width">
                <input
                  type="text"
                  id="port"
                  name="port"
                  class="form-input fs-14"
                  placeholder=""
                  
                />
                <label for="port">Port &nbsp;<span>*</span></label>
              </div>
            <div class="form-floating add_employee_width">
                <input
                  type="text"
                  id="encrypt"
                  name="encrypt"
                  class="form-input fs-14"
                  placeholder=""
                  
                />
                <label for="encrypt">Encryption &nbsp;<span>*</span></label>
              </div>
            <div class="form-floating add_employee_width">
                <input
                  type="text"
                  id="auth_type"
                  name="auth_type"
                  class="form-input fs-14"
                  placeholder=""
                  
                />
                <label for="auth_type">Authentication Type &nbsp;<span>*</span></label>
              </div>
            <div class="form-floating add_employee_width">
                <input
                  type="text"
                  id="user_name"
                  name="user_name"
                  class="form-input fs-14"
                  placeholder=""
                  
                />
                <label for="user_name">Username &nbsp;<span>*</span></label>
              </div>
            <div class="form-floating add_employee_width">
                <input
                  type="password"
                  id="password"
                  name="password"
                  class="form-input fs-14"
                  placeholder=""
                  
                />
                <label for="password">Password &nbsp;<span>*</span></label>
              </div>
            <div class="form-floating add_employee_width">
                <input
                  type="text"
                  id="sender_display_na"
                  name="sender_display_na"
                  class="form-input fs-14"
                  placeholder=""
                  
                />
                <label for="sender_display_na">Sender Display Name</label>
              </div>
            <div class="form-floating add_employee_width">
                <input
                  type="text"
                  id="reply_to"
                  name="reply_to"
                  class="form-input fs-14"
                  placeholder=""
                  
                />
                <label for="reply_to">Reply-To Address</label>
              </div>
              
              
              <!---- submit ---->
              <div class="d-flex justify-content-between gap-3 add_employee_width">
              <button
                    type="button"
                    class="btn white_button px-4 fs-14 fw-700"
                    id="#"
                    >Reset Configuration</button
                  >
                <button
                  type="button"
                  id="upload"
                  class="delon-primary-btn bg-primary-blue border-0 text-white fw-bold fs-14 expense_button"
                >
                  <span>Test Connection</span>
                </button>
              </div>
            </div>
          </div>
        </div>
        {/* Page Content Box */}
      </div>
    </section>
  </main>

  
</Layout>
<!-- Main content ends here -->
