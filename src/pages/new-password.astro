---
import SuccessModal from "../components/ui/SuccessModal.astro";
---

<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="favicon.png" />
    <meta name="generator" content="generator" />
    <title>HRPayHub :: Set New Password</title>
    <link
      href="libs/bootstrap-5.3.5-dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link href="css/styles.css" rel="stylesheet" />
    <!-- Select2 CSS -->

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css"
    />
  </head>

  <body>
    <main>
      <section>
        <div class="d-flex">
          <SuccessModal modalId="successModal" title="New Password" />
          <!------- sign in picture ------>
          <div
            class="d-none d-lg-flex flex-column sign_in_img_bg align-items-center justify-content-center gap-3 py-5"
          >
            <h1 class="text-primary-blue font-ubuntu-bold fs-40 fw-900">
              Simplify your HR and payroll management
            </h1>

            <img
              class="w-100"
              src="images/png/signin_img.png"
              alt="sign in image"
            />
          </div>

          <!------- sign in form ------>
          <div
            class="d-flex flex-column py-5 px-3 align-items-center gap-5 sign_area"
          >
            <div>
              <img
                class="mt-5 sign_logo"
                src="images/png/icons/hrpayhub-logo.svg"
                alt="hrpayhub logo"
              />
            </div>

            <div class="text-center sign_in_input">
              <h3 class="fs-14 font-ubuntu fw-700">Set a New Password</h3>

              <p class="fs-12 text-secondary">
                Enter your new password below. Make sure it's strong and secure.
              </p>
            </div>

            <form
              class="d-flex flex-column justify-content-center align-items-center"
            >
              <div class="d-flex flex-column gap-4">
                <div class="toggle_password">
                  <div class="form-floating mt-2 sign_in_input">
                    <input
                      type="password"
                      id="password"
                      name="password"
                      class="form-input"
                      placeholder=""
                    />
                    <label for="password">Password &nbsp;<span>*</span></label>
                  </div>
                  <span class="cursor-pointer toggle-eye"
                    ><img
                      class="show-eye"
                      style="display: block;"
                      src="images/png/icons/vision-dark.svg"
                      alt="Show Password"
                    />
                    <img
                      style="display: none;"
                      class="hide-eye bg-transparent"
                      src="images/png/icons/vision-strike.svg"
                      alt="Hide Password"
                    />
                  </span>
                </div>
                <div class="toggle_password">
                  <div class="form-floating mt-2 sign_in_input">
                    <input
                      type="password"
                      id="confirmPassword"
                      name="confirmPassword"
                      class="form-input"
                      placeholder=""
                    />
                    <label for="confirmPassword"
                      >Confirm Password &nbsp;<span>*</span></label
                    >
                  </div>
                  <span class="cursor-pointer toggle-eye2"
                    ><img
                      class="show-eye"
                      style="display: block;"
                      src="images/png/icons/vision-dark.svg"
                      alt="Show Password"
                    />
                    <img
                      style="display: none;"
                      class="hide-eye bg-transparent"
                      src="images/png/icons/vision-strike.svg"
                      alt="Hide Password"
                    />
                  </span>
                </div>
              </div>

              <div
                class="d-flex justify-content-start align-items-end w-100 mt-5"
              >
                <div>
                  <button
                    type="button"
                    id="login"
                    class="delon-primary-btn bg-primary-blue border-0 text-white font-avenir-bold fs-14 d-flex align-items-center gap-2"
                    data-bs-toggle="modal"
                    data-bs-target="#successModal"
                  >
                    <span>Reset Password</span>
                    <img
                      src="images/png/icons/arrow-right.svg"
                      alt="arrow-right"
                    />
                  </button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </section>
    </main>

    <script defer src="libs/jquery/jquery-3.7.1.min.js"></script>
    <script is:inline src="libs/bootstrap-5.3.5-dist/js/bootstrap.bundle.min.js"
    ></script>
    <!-- Select2 JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.full.min.js"
    ></script>

    <script>
      $(document).ready(function () {
        $(".toggle-eye").on("click", function () {
          const $passwordInput = $("#password");

          const $showEye = $(this).find(".show-eye");
          const $hideEye = $(this).find(".hide-eye");

          if ($passwordInput.attr("type") === "password") {
            $passwordInput.attr("type", "text");
            $showEye.hide();
            $hideEye.show();
          } else {
            $passwordInput.attr("type", "password");
            $showEye.show();
            $hideEye.hide();
          }
        });
        $(".toggle-eye2").on("click", function () {
          const $confirmPasswordInput = $("#confirmPassword");

          const $showEye = $(this).find(".show-eye");
          const $hideEye = $(this).find(".hide-eye");

          if ($confirmPasswordInput.attr("type") === "password") {
            $confirmPasswordInput.attr("type", "text");
            $showEye.hide();
            $hideEye.show();
          } else {
            $confirmPasswordInput.attr("type", "password");
            $showEye.show();
            $hideEye.hide();
          }
        });
      });
    </script>
  </body>
</html>
