---

<Layout title="HRPayHub :: Generate WHT Document">
  <!-- Main content starts here -->
  <main>
    <!-- First section of Back button and Breadcrumb -->
    <section class="p-4">
      <div class="screenFrame">
        <!-- Back Navigation button and BreadCrumbs -->
        <div class="d-flex gap-5">
          <a
            href="/monthly-wht-filing"
            title="Back to Dashboard"
            class="d-flex gap-2 align-items-center text-decoration-none text-primary-dark"
          >
            <img src="images/png/icons/angle-left.svg" alt="angle-left-back" />
            <span class="fs-16 fw-bold font-avenir-bold">Back</span>
          </a>

          <!-- Actual Breadcrumb here -->
          <div class="d-flex align-items-center gap-2">
            <a
              href="index.html"
              class="fs-14 text-decoration-none text-primary-dark">Dashboard</a
            >
            <img
              src="images/png/icons/angle-right.svg"
              alt="angle-right-back"
            />
            <a
              href="/pay-as-you-go"
              class="fs-14 text-decoration-none text-primary-dark"
              >Pay as you go</a
            >
            <img
              src="images/png/icons/angle-right.svg"
              alt="angle-right-back"
            />
            <a
              href="/monthly-wht-filing"
              class="fs-14 text-decoration-none text-primary-dark"
              >Monthly WHT Filing</a
            >
            <img
              src="images/png/icons/angle-right.svg"
              alt="angle-right-back"
            />
            <span class="fs-16 fw-bold text-primary-blue"
              >Generate WHT Document</span
            >
          </div>
          <!-- Actual Breadcrumb here -->
        </div>
        <!-- Back Navigation button and BreadCrumbs -->
      </div>
    </section>
    <!-- First section of Back button and Breadcrumb -->

    <!-- First section of Back button and Breadcrumb -->
    <section class="px-4" id="manage_report">
      <div class="screenFrame">
        <div class="rounded-4 shadow p-4 vstack gap-5 px-5">
          {/* Page Content Box */}
          <div class="p-lg-5">
            <div class="vstack" style="gap: 2.3rem">
              <!---- Setup --->
              <div class="d-flex align-items-center gap-4">
                <div class="fs-18 fw-700 text-primary-blue">
                  Generate WHT Document
                </div>
              </div>

              <!---- body ---->
              <form
                class="vstack"
                style="gap: 2.3rem"
                id="generate_report_form"
              >
                <div class="form-floating add_employee_width">
                  <input
                    type="date"
                    id="select_date"
                    name="select_date"
                    class="form-input fs-14"
                    placeholder=""
                    value="Lorem Ipsum"
                    required
                  />
                  <label for="select_date">
                    Select Date &nbsp;<span>*</span>
                  </label>
                </div>

                <!---- submit ---->
                <div class="d-flex justify-content-start add_employee_width">
                  <button
                    type="submit"
                    id="upload"
                    class="delon-primary-btn bg-primary-blue border-0 text-white fw-bold fs-14 expense_button"
                  >
                    <span>Proceed</span>
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      {/* Page Content Box */}
    </section>
  </main>

  <section class="px-4 d-none" id="view_report">
    <div class="screenFrame">
      <div class="d-flex flex-column justify-content-between">
        <div
          class="rounded-4 shadow p-4 d-flex flex-column gap-5 px-md-5 px-3"
          style={{ flexBasis: "auto" }}
        >
          {/* Page Content Box */}
          <div class="vstack gap-4">
            <div class="d-flex align-items-center justify-content-end gap-4">
              <button
                id="back_to_manage_report"
                class="delon-primary-btn bg-white text-primary-blue border-primary-blue text-decoration-none text-white fw-bold fs-14"
              >
                Back
              </button>
              <div class="d-flex justify-content-end">
                <button
                  class="btn bg-primary-blue d-flex text-white fs-14"
                  type="button"
                  data-bs-toggle="modal"
                  data-bs-target="#approveModal"
                  data-title="Make Payment"
                >
                  <img src="images/png/icons/remit-payment.svg" alt="" /><span
                    class="ms-2 text-nowrap">Make Payment</span
                  >
                </button>
              </div>
            </div>

            {/* <!-- Table section --> */}
            <div class="table-responsive w-full">
              <table
                class="table table-bordered payslip_table"
                style={{ tableLayout: "auto", minWidth: "100%" }}
              >
                <tbody>
                  {/* <!-- Table Header --> */}
                  <tr>
                    <td
                      colspan="3"
                      class="bg-primary-blue text-white px-4 fw-bold fs-14 px-12px"
                    >
                      WHT Summary (Aug 2025)
                    </td>
                  </tr>

                  <tr>
                    {/* <!-- White Space Row --> */}
                    <td
                      style={{ border: "0" }}
                      colspan="6"
                      class="bg-white px-4 px-12px fw-bold fs-14"
                    >
                      &nbsp;
                    </td>
                  </tr>

                  {/* <!-- White Space Row --> */}

                  {/* <!-- Table Section Header --> */}
                  <tr>
                    <td
                      style={{ border: "0" }}
                      class="bg-primary-blue text-white px-4 px-12px fw-bold fs-14 text-nowrap"
                    >
                      Client Name
                    </td>
                    <td
                      style={{ border: "0" }}
                      class="bg-primary-blue text-white px-4 px-12px fw-bold fs-14 text-nowrap"
                    >
                      Amount Deducted
                    </td>
                    <td
                      style={{ border: "0" }}
                      class="bg-primary-blue text-white px-4 px-12px fw-bold fs-14 text-nowrap"
                    >
                      Service Description
                    </td>
                  </tr>
                  {/* <!-- Table Section Header --> */}
                  {
                    [
                      {
                        date: "29 Jun 2025",
                        client_name: "Lorem",
                        service: "Lorem",
                        sub: "Lorem",
                        vat_received: "Lorem",
                        vat_withheld: "Lorem",
                      },
                      {
                        date: "29 Jun 2025",
                        client_name: "Lorem",
                        service: "Lorem",
                        sub: "Lorem",
                        vat_received: "Lorem",
                        vat_withheld: "Lorem",
                      },
                      {
                        date: "29 Jun 2025",
                        client_name: "Lorem",
                        service: "Lorem",
                        sub: "Lorem",
                        vat_received: "Lorem",
                        vat_withheld: "Lorem",
                      },
                      {
                        date: "29 Jun 2025",
                        client_name: "Lorem",
                        service: "Lorem",
                        sub: "Lorem",
                        vat_received: "Lorem",
                        vat_withheld: "Lorem",
                      },
                    ].map((ele, index) => (
                      <tr>
                        <td
                          class="text-black px-4 px-12px fs-14 text-nowrap"
                          style={{ width: "50%" }}
                        >
                          {ele.client_name}
                        </td>
                        <td
                          class="text-black px-4 px-12px fs-14 text-nowrap"
                          style={{ width: "50%" }}
                        >
                          {ele.sub}
                        </td>
                        <td
                          class="text-black px-4 px-12px fs-14 text-nowrap"
                          style={{ width: "50%" }}
                        >
                          {ele.service}
                        </td>
                      </tr>
                    ))
                  }
                </tbody>
              </table>
            </div>
            {/* <!-- Table section --> */}
          </div>
          {/* Page Content Box */}
        </div>
      </div>
    </div>
    <ModalAddNew
      modalId="myModal"
      title={"Edit Details"}
      inputPlace="Remit Payment"
    />
    <ApproveRemitModal
      modalId="approveModal"
      title="Generate VAT Document"
      amount="â‚¦25,000"
    />
  </section>
</Layout>

<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    document
      .getElementById("generate_report_form")
      ?.addEventListener("submit", (e) => {
        e.preventDefault();

        $("#view_report").addClass("d-none");
        const submitBtn = e.target.querySelector("button");

        submitBtn.innerHTML = `
                        <span>
                            <span class="spinner-border spinner-border-sm" aria-hidden="true"></span>
                            <span role="status">Loading...</span>
                        </span>
                    `;
        submitBtn.disabled = true;

        setTimeout(() => {
          submitBtn.innerHTML = `
                            <span>Proceed</span>
                        `;
          submitBtn.disabled = false;
          $("#manage_report").addClass("d-none");
          $("#view_report").removeClass("d-none");
        }, 1000);
      });

    $("#back_to_manage_report").click((evt) => {
      $("#view_report").addClass("d-none");
      $("#manage_report").removeClass("d-none");
    });

    $("#view_payment_status").click((evt) => {
      $("#paymentStatus").removeClass("d-none");
      $("#view_report").addClass("d-none");
    });

    $("#fileInputBtn").click((evt) => {
      $("#fileInput").click();
    });
  });
</script>

<!-- Main content ends here -->
