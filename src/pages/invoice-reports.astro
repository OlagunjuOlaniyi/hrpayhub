<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    const ctx = document.getElementById("financialChart");
    if (!ctx) return;

    new Chart(ctx, {
      type: "bar",
      data: {
        labels: ["0-30 days", "31-60 days", "61-90 days", "90+ days"],
        datasets: [
          {
            label: "Amount",
            data: [80000, 120000, 70000, 80000],
            backgroundColor: "#2271B6",
            borderRadius: 8,
            barThickness: 60,
          },
        ],
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,

        scales: {
          x: {
            ticks: {
              font: { size: 14 },
            },
            grid: {
              display: false,
            },
          },
          y: {
            min: 0,
            max: 120000,
            ticks: {
              stepSize: 40000,
              font: { size: 14 },
              callback: (value) => `${value / 1000}k`,
            },
            grid: {
              color: "#E5E7EB",
            },
          },
        },

        plugins: {
          legend: {
            position: "bottom",
            align: "start",
            labels: {
              usePointStyle: true,
              pointStyle: "circle",
              boxWidth: 10,

              font: {
                size: 14,
              },
            },
          },
          tooltip: {
            callbacks: {
              label: (ctx) =>
                `${ctx.dataset.label}: ${ctx.raw.toLocaleString()}`,
            },
          },
        },
      },
    });

    const ctx2 = document.getElementById("pieChart");
    if (!ctx2 || typeof Chart === "undefined") return;

    new Chart(ctx2, {
      type: "pie",
      data: {
        labels: ["Niche Company", "Ciadem Enterprise", "Eding"],
        datasets: [
          {
            data: [120000, 60000, 50000],
            backgroundColor: ["#FDBA8C", "#2271B6", "#18C1C8"],
            borderWidth: 1,
          },
        ],
      },
      options: {
        responsive: false,
        plugins: {
          legend: {
            display: false, // we use custom legend
          },
          tooltip: {
            callbacks: {
              label: (ctx2) => `${ctx2.label}: ${ctx2.raw.toLocaleString()}`,
            },
          },
        },
      },
    });
  });
</script>
