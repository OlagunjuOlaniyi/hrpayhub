  <script is:inline>
    document.addEventListener("DOMContentLoaded", function () {
      console.log("Block Script Loaded");

      // Template function for a block row
      function createBlockRow(num) {
        return `
      <div class="d-flex gap-4 align-items-center fs-14 block-row" data-block="${num}">
        <div class="block-label">Block ${num}:</div>

        <div class="d-flex gap-3 align-items-center">
          <div class="rounded-4 px-4 py-2 bg-grey">09:00 AM</div>
          <div>to</div>
          <div class="rounded-4 px-4 py-2 bg-grey">01:00 AM</div>
        </div>

        <button type="button" class="border-0 bg-white fs-14 delete-block">
          <img src="images/png/icons/delete-black.svg" alt="delete" />
        </button>
      </div>
    `;
      }

      // Initialize all days
      $(".day-container").each(function () {
        const day = $(this).data("day");
        const $container = $(this).find(".blocks-container");
        const $status = $(this).find(".day-status");

        if (day !== "Monday") {
          // Add 2 default blocks for Tueâ€“Sun
          $container.append(createBlockRow(1));
          //   $container.append(createBlockRow(2));

          $status.text("Open").css("background", "green");
        }
      });

      // Add block logic
      $(document).on("click", ".add-block-btn", function () {
        const $parent = $(this).closest(".day-container");
        const $container = $parent.find(".blocks-container");
        const $status = $parent.find(".day-status");

        const count = $container.children(".block-row").length;

        if (count >= 2) return; // Max 2 blocks

        const newNum = count + 1;
        $container.append(createBlockRow(newNum));

        // Set status OPEN
        $status.text("Open").css("background", "green");
      });

      // Delete block logic
      $(document).on("click", ".delete-block", function () {
        const $parent = $(this).closest(".day-container");
        const $container = $parent.find(".blocks-container");
        const $status = $parent.find(".day-status");

        $(this).closest(".block-row").remove();

        // Renumber blocks
        $container.children(".block-row").each(function (i) {
          const num = i + 1;
          $(this).attr("data-block", num);
          $(this).find(".block-label").text(`Block ${num}:`);
        });

        if ($container.children(".block-row").length === 0) {
          // No blocks â†’ closed but container stays visible
          $status.text("Closed").css("background", "red");
        }
      });

      const monthNames = [
        "Jan",
        "Feb",
        "Mar",
        "Apr",
        "May",
        "Jun",
        "Jul",
        "Aug",
        "Sep",
        "Oct",
        "Nov",
        "Dec",
      ];

      function formatDate(date) {
        return `${date.getDate()} ${monthNames[date.getMonth()]}`;
      }

      const today = new Date();
      const dates = [];

      // generate 7 days (today + 1â€¦6)
      for (let i = 0; i < 7; i++) {
        const d = new Date(today);
        d.setDate(today.getDate() + i);
        dates.push(formatDate(d));
      }

      // Fill all elements with class .day-date
      document.querySelectorAll(".day-date").forEach((el, index) => {
        el.textContent = dates[index];
      });
    });
  </script>
