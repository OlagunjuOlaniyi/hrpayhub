<Layout title="HRPayHub :: Setup">
  <!-- Main content starts here -->
  <main>
    <!-- First section of Back button and Breadcrumb -->
    <section class="p-4">
      <div class="screenFrame">
        <!-- Back Navigation button and BreadCrumbs -->
        <div class="d-flex gap-5">
          <a
            href="/financial-setup-uk"
            title="Back to Dashboard"
            class="d-flex gap-2 align-items-center text-decoration-none text-primary-dark"
          >
            <img src="images/png/icons/angle-left.svg" alt="angle-left-back" />
            <span class="fs-16 fw-bold font-avenir-bold">Back</span>
          </a>

          <!-- Actual Breadcrumb here -->
          <div class="d-flex align-items-center gap-2">
            <a
              href="index.html"
              class="fs-14 text-decoration-none text-primary-dark">Dashboard</a
            >
            <img
              src="images/png/icons/angle-right.svg"
              alt="angle-right-back"
            />
            <a
              href="/financial-reports-and-analytics"
              class="fs-14 text-decoration-none text-primary-dark"
              >Financial Reports & Analytics</a
            >

            <img
              src="images/png/icons/angle-right.svg"
              alt="angle-right-back"
            />
            <a
              href="/financial-reports-and-analytics-uk"
              class="fs-14 text-decoration-none text-primary-dark"
              >Financial Reports & Analytics - UK</a
            >
            <img
              src="images/png/icons/angle-right.svg"
              alt="angle-right-back"
            />
            <a
              href="/financial-setup-uk"
              class="fs-14 text-decoration-none text-primary-dark">Setup</a
            >
            <img
              src="images/png/icons/angle-right.svg"
              alt="angle-right-back"
            />
            <span class="fs-16 fw-bold text-primary-blue">Company Setup</span>
          </div>
          <!-- Actual Breadcrumb here -->
        </div>
        <!-- Back Navigation button and BreadCrumbs -->
      </div>
    </section>
    <!-- First section of Back button and Breadcrumb -->

    <!-- First section of Back button and Breadcrumb -->
    <section class="px-4">
      <div class="screenFrame">
        <div class="rounded-4 shadow p-4 vstack gap-5 px-5">
          {/* Page Content Box */}
          <div class="p-lg-5">
            <div class="vstack" style="gap: 2.3rem">
              <!---- Setup --->
              <div class="d-flex align-items-center gap-4 add_employee_width">
                <div class="fs-14 fw-600 text-primary-blue">Company Setup</div>
                <div class="flex-grow-1">
                  <div class="demarcator_line">&nbsp;</div>
                </div>
              </div>

              <!---- body ---->
              <div class="d-flex gap-3 align-items-center">
                <div class="form-floating add_employee_width">
                  <select
                    id="company_type"
                    name="company_type"
                    class="form-select_custom fs-14"
                    required
                  >
                    <option value="" selected> Select </option>
                    <option value="1">Private Limited</option>
                    <option value="2">Public</option>
                    <option value="3">Partnership</option>
                    <option value="4">Sole Proprietorship</option>
                  </select>
                  <label for="company_type">
                    Company Type &nbsp;<span>*</span>
                  </label>
                </div>
                <div
                  class=""
                  data-bs-html="true"
                  data-bs-placement="right"
                  data-bs-toggle="tooltip"
                  data-bs-custom-class="tooltip-left-align tooltip-width"
                  title="<div class='fs-12'>Choose your legal business structure. This affects your tax calculations and statutory reporting.
                        </div>"
                  style={{ cursor: "pointer" }}
                >
                  <img src="images/png/icons/info.svg" alt="info" />
                </div>
              </div>
              <div class="form-floating add_employee_width">
                <select
                  id="sector"
                  name="sector"
                  class="form-select_custom fs-14"
                  required
                >
                  <option value="" selected>Select</option>
                  <option value="1">Banking & Financial Services</option>
                  <option value="2">Insurance</option>
                  <option value="3">Telecommunications</option>
                  <option value="4">Small & Medium Enterprises (SMEs)</option>
                  <option value="5">Healthcare & Life Sciences</option>
                  <option value="6">Agriculture & Agribusiness</option>
                  <option value="7">Technology & Software</option>
                  <option value="8">Education & Training</option>
                  <option value="9">Manufacturing & Industrial</option>
                  <option value="10">Retail & Consumer Goods</option>
                  <option value="11">Logistics & Transportation</option>
                  <option value="12">Energy & Utilities</option>
                  <option value="13">Real Estate & Construction</option>
                  <option value="14">Hospitality & Travel</option>
                  <option value="15">Public Sector & Non-Profit</option>
                  <option value="16">Other </option>
                </select>
                <label for="sector">Sector &nbsp;<span>*</span></label>
              </div>
              <div class="d-flex gap-3 align-items-center">
                <div class="form-floating add_employee_width">
                  <select
                    id="special_status"
                    name="special_status"
                    class="form-select_custom fs-14"
                    required
                  >
                    <option value="" selected> Select </option>
                    <option value="1">None</option>
                    <option value="2">R&D Tax Relief</option>
                  </select>
                  <label for="special_status">
                    Special Status &nbsp;<span>*</span>
                  </label>
                </div>
                <div
                  class=""
                  data-bs-html="true"
                  data-bs-placement="right"
                  data-bs-toggle="tooltip"
                  data-bs-custom-class="tooltip-left-align tooltip-width"
                  title="<div class='fs-12'>Select if your company is eligible for R&D Tax Relief under UK HMRC regulations. If selected, P&L reporting will be disabled in this system to avoid errors. Consult a licensed accountant before claiming this relief.

                        </div>"
                  style={{ cursor: "pointer" }}
                >
                  <img src="images/png/icons/info.svg" alt="info" />
                </div>
              </div>
              <div class="d-flex gap-3 align-items-center">
                <div class="form-floating add_employee_width">
                  <input
                    type="text"
                    id="year_in_op"
                    name="year_in_op"
                    class="form-input"
                    placeholder=""
                  />
                  <label for="year_in_op"
                    >Years in Operations &nbsp;<span>*</span></label
                  >
                </div>
                <div
                  class=""
                  data-bs-html="true"
                  data-bs-placement="right"
                  data-bs-toggle="tooltip"
                  data-bs-custom-class="tooltip-left-align tooltip-width"
                  title="<div class='fs-12'>Enter how long your business has been actively trading. Some reliefs are available to new businesses
                        </div>"
                  style={{ cursor: "pointer" }}
                >
                  <img src="images/png/icons/info.svg" alt="info" />
                </div>
              </div>

              <!---- submit ---->
              <div class="d-flex justify-content-start add_employee_width">
                <button
                  type="submit"
                  id="upload"
                  class="delon-primary-btn bg-primary-blue border-0 text-white fw-bold fs-14 expense_button"
                >
                  <span>Save</span>
                </button>
              </div>
            </div>
          </div>
        </div>
        {/* Page Content Box */}
      </div>
    </section>
  </main>

  <script is:inline>
    document.addEventListener("DOMContentLoaded", () => {
      $("#fileInputBtn").click((evt) => {
        $("#fileInput").click();
      });
    });
  </script>
</Layout>
<!-- Main content ends here -->
